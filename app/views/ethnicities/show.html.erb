<h1 class="page_head">Etnicity Viewer</h1>
  
<% if @images %>
  <% @images.each do |image| %>
    <% link_to image.path, image.path %>
  <% end %>
<% end %>

<div class="people">
  <h2>Ethnicity: </h2> <h3><%= @ethnie.name %></h3>
  <p><span>Members Details:</span></p>
  <% @ethnie.classical_muslims.each do |member| %>
    <p class="field_bar"> <a href="/classical_muslim/show/<%= member.id%>"><%= member.ism%> <%= member.nasab%></a></p>
  <% end %>
</div>

<div class="descriptions">

  <p><span>Description:</span></p>
  <% if @ethnie.descriptions.first %>
    <p><%= @ethnie.descriptions.first.content %> </p>
  <% end %>

</div>


<br>